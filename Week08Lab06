                 ##Task01##
public class Movie {
   
    private String title;
    private String director;
    private int releaseYear;
    
    
    public String getTitle() {
        return title;
    }
    
    public void setTitle(String title) {
        this.title = title;
    }
    
  
    public String getDirector() {
        return director;
    }
    
    public void setDirector(String director) {
        this.director = director;
    }
    
   
    public int getReleaseYear() {
        return releaseYear;
    }
    
    public void setReleaseYear(int releaseYear) {
        this.releaseYear = releaseYear;
    }
}

public class Main {
    public static void main(String[] args) {
        
        Movie myMovie = new Movie(“Ahmad”,”Funny,”2035);
      
        
       
        System.out.println("Movie Title: " + myMovie.getTitle());
        System.out.println("Director: " + myMovie.getDirector());
        System.out.println("Release Year: " + myMovie.getReleaseYear());
    }
}
                 ##Task02##
public class Appliance {
    private String brand;
    private String model;
    private int powerConsumption;

    
    public Appliance(String brand, String model, int powerConsumption) {
        this.brand = brand;
        this.model = model;
        this.powerConsumption = powerConsumption;
    }

   
    public String getBrand() {
        return brand;
    }

    public String getModel() {
        return model;
    }

    public int getPowerConsumption() {
        return powerConsumption;
    }
}
SUB CLASS:
class Refrigerator extends Appliance {
    int capacity;

    
    Refrigerator(String brand, String model, int powerConsumption, int capacity) {
        super(brand, model, powerConsumption);
        this.capacity = capacity;
    }

    
    int getCapacity() {
        return capacity;
    }

    void setCapacity(int capacity) {
        this.capacity = capacity;
    }
}
MAIN:
public class Main {
    public static void main(String[] args) {
       
        Refrigerator fridge = new Refrigerator("PEL", "DOWLANCE", 900, 300);

        
        System.out.println("Brand: " + fridge.getBrand());
        System.out.println("Model: " + fridge.getModel());
        System.out.println("Power Consumption: " + fridge.getPowerConsumption() + " watts");
        System.out.println("Capacity: " + fridge.getCapacity() + " liters");
    }
}
